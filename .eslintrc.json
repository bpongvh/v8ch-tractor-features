{
  "env": {
    "amd": true,
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true,
    "jquery": true
  },
  "extends": [
    "airbnb",
    "plugin:jest/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "globals": {
    "wp": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "globalReturn": true,
      "generators": false,
      "objectLiteralDuplicateProperties": false,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": ["import", "jest"],
  "root": true,
  "rules": {
    "linebreak-style": "off",
    "react/jsx-one-expression-per-line": "off"
  },
  "settings": {
    "import/core-modules": [],
    "import/ignore": [
      "node_modules",
      "\\.(coffee|scss|css|less|hbs|svg|json)$"
    ]
  }
}